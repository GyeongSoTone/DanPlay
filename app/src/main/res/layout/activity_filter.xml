<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:text="필터"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_event"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="bottom"
            android:paddingLeft="50dp"
            android:text="종목"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center">

            <Button
                android:id="@+id/button_tennis"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_event"
                android:text="테니스"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/button_soccer"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_event"
                android:text="축구"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/button_basketball"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_event"
                android:text="농구"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/button_jokgoo"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_event"
                android:text="족구"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/button_futsal"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_event"
                android:text="풋살"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:paddingLeft="50dp"
            android:text="일시"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center">

            <Button
                android:id="@+id/button_startday"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_event"
                android:text="검색 시작 날짜"
                android:textColor="@color/gray"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_wave"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="~"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_margin="35dp"/>

            <Button
                android:id="@+id/button_endday"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_event"
                android:text="검색 마지막 날짜"
                android:textColor="@color/gray"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_filterapply"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/btn"
                android:text="적용"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/button_filterreset"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/btn"
                android:text="취소"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="10dp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>