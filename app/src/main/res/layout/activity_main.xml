<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/ll_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <TextView
            android:text="매치 조회"
            android:textSize="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_filter"
            android:layout_marginLeft="150dp"
            android:padding="12dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/dbdbdb"
        app:layout_constraintTop_toBottomOf="@id/ll_match" />
    <ListView
        android:id="@+id/mainListView"
        app:layout_constraintTop_toBottomOf="@id/ll_match"
        android:layout_width="match_parent"
        android:layout_height="614dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/mainListView"
        android:background="@drawable/layout_background" >

        <ImageView
            android:src="@drawable/btn_home"
            android:layout_marginVertical="12dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="2dp"/>
        <ImageView
            android:src="@drawable/btn_enroll"
            android:layout_marginVertical="12dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="2dp"/>
        <ImageView
            android:src="@drawable/btn_lookup"
            android:layout_marginVertical="12dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="2dp"/>
        <ImageView
            android:src="@drawable/btn_myinfo"
            android:layout_marginVertical="12dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="2dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>